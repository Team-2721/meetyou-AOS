<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.team2127.presentation.ui.main.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alternative">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tool_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/h2"
            app:menu="@menu/main_menu"
            />

        <View
            android:id="@+id/view_main_tab_bar_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/normal"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar_main"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_main_input_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/b3"
            android:text="@string/main_input_code"
            android:textColor="@color/normal"
            android:gravity="center_vertical"
            android:background="@drawable/corners_all_10"
            app:backgroundTint="@color/white"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            app:icon="@drawable/ic_search_orange"
            app:iconTint="@color/secondary"
            app:iconPadding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/view_main_tab_bar_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_room_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_main_input_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_main_room"
            tools:itemCount="2"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_main_room_plus"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@drawable/corners_all_10"
            android:backgroundTint="@color/white"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toBottomOf="@id/rv_main_room_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ImageView
                android:id="@+id/tv_main_room_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plus_orange"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
